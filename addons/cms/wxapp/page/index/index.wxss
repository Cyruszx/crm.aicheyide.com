.page {
    /* width: 750rpx; */
    display: flex;
    flex-direction: column;
    box-sizing: border-box;
    /* background-color: #EFEFF4; */
    font-size: 16px;
    font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
}

.page .page_hd {
    padding: 0rpx 20rpx 15rpx 20rpx;
    display: flex;
    flex-direction: row;
    background: #fff;
}

.page .page_hd .page_hd_position {
    box-sizing: border-box;
    width: 16%;
    height: 60rpx;
    line-height: 60rpx;
    position: relative;
    top: -2px;
}


