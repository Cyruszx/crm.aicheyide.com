.card__header {
    padding: 0 30rpx !important;
}

.card__content {
    position: relative;
    width: 100%;
}

.card__image {
    display: block;
    width: 192rpx;
    height: 54rpx;
    margin-left: -30rpx;
}

.card__more {
    position: absolute;
    right: 0;
    top: 0;
    font-size: 28rpx;
    line-height: 54rpx;
    color: rgba(221, 213, 213, 1);
}

.scroll-y {
    display: flex;
    height: 668rpx;
    overflow: hidden;
}

.scroll-y .card__cover {
    height: 668rpx;
}

.scroll-y .car__scroll {
    height: 668rpx;
    overflow-y: auto;
    white-space: normal;
}

.car {
    display: inline-block;
    padding: 0 20rpx;
    width: 270rpx;
    /*height: 180rpx;*/
    box-sizing: border-box;
}

.car__scroll {
    width: auto;
    overflow-x: auto;
    white-space: nowrap;
}

.car__image {
    display: block;
    width: 100%;
    height: 180rpx;
}

.card__cover {
    display: block;
    width: 100%;
    height: 216rpx;
}

.car__title {
    color: rgba(16, 16, 16, 1);
    font-size: 24rpx;
    text-align: left;
    font-family: PingFangSC-regular;
    margin-top: 6rpx;
}

.car__title--payment {
    color: rgba(229, 28, 35, 1);
}

.car__title--monthly {
    color: rgba(193, 195, 200, 1);
}

.grid__more {
    color: #3b66bb;
}

.grid__more .fa {
    font-size: 56rpx;
}

.grid__name {
    font-size: 24rpx;
}