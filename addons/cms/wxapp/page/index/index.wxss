.page {
    /* width: 750rpx; */
    display: flex;
    flex-direction: column;
    box-sizing: border-box;
    /* background-color: #EFEFF4; */
    font-size: 16px;
    font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
}

.page .page_hd {
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    padding: 10rpx 20rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: row;
    color: #fff;
    box-sizing: border-box;
    z-index: 10;
    transition: background-color .3s;
}

.page .page_hd--fixed {
    background-color: #fff;
    color: #333;
}

.page .page_hd .page_hd_position {
    box-sizing: border-box;
    width: 16%;
    height: 60rpx;
    line-height: 60rpx;
    position: relative;
    /*top: -2px;*/
}


/* .page .page_hd .page_hd_position .fa-angle-down {
    position: absolute;
    right: 30rpx;
    top: -5rpx;
} */

.page .page_hd .page_hd_search {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 68%;
    height: 60rpx;
    border-radius: 30rpx;
    background-color: #f2f2f2;
    color: #888;
    text-align: center;
    box-sizing: border-box;
    font-size: 26rpx;
}

.page .page_hd .page_hd_search icon {
    vertical-align: middle;
}

.page .page_hd .page_hd_phone {
    display: flex;
    align-items: center;
    justify-content: center;
    /*width: 16%;*/
    height: 100%;
    text-align: center;
    position: relative;
    padding-left: 10rpx;
    box-sizing: border-box;
    font-size: 40rpx;
}

.button-clear {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    padding: 0 10rpx;
    min-width: 72rpx;
}

.button-text {
    font-size: 20rpx;
    margin-top: 4rpx;
    /*letter-spacing: -4rpx;*/
}

