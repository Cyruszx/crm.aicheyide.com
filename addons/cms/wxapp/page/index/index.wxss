.page .page_hd .page_hd_search {
    width: 74%;
    height: 60rpx;
}

.page .page_hd .page_hd_phone {
    width: 10%;
    height: 100%;
    text-align: center;
    position: relative;
}

.page .page_hd .page_hd_phone .fa-volume-control-phone {
    position: absolute;
    top: -6rpx;
}

.page .page_broadcast {
    /* height: 290rpx; */
}

.page .newcar_optimization {
    margin-top: 15rpx;
    position: relative;
    align-items: center;
}

.page .newcar_optimization .fa-chevron-right {
    position: absolute;
    right: 200rpx;
    top: 12rpx;
    z-index: 20;
    color: #888;
}


