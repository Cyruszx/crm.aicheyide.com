<view class="i-index-demo">
    <i-index height="100%">
        <i-index-item wx:for="{{ brandList }}" wx:for-index="index" wx:key="{{index}}" wx:for-item="item" name="{{item.key}}"  wx:if="{{ !(arrowInput && inputValue.length > 0) }}">
            <view class="i-index-demo-item" wx:for="{{item.list}}" wx:for-index="in" wx:key="{{in}}" wx:for-item="it" data-value="{{ it }}" bindtap="onClick">
                {{it.name}}
            </view>
        </i-index-item>
    </i-index>
</view>