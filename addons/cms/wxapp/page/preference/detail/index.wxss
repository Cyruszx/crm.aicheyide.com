/* page/preference/detail/index.wxss */

.title {
    position: relative;
    display: flex;
    align-items: center;
    height: 30rpx;
    padding-left: 26rpx;
}

.title:after {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    width: 6rpx;
    height: 100%;
    background-color: #3f51b5;
}

.plan-image {
    width: 100%;
    height: 400rpx;
}

.wish {
    display: flex;
    align-items: center;
    /* justify-content: center; */
    height: 80rpx;
    font-size: 24rpx;
    padding: 10rpx;
    color: #ffffff;
    background-color: #3f51b5;
    box-sizing: border-box;
    margin: 30rpx 30rpx 120rpx;
}

.wish__image {
    height: 40rpx;
    width: 88rpx;
    margin: 0 30rpx 0 10rpx;
}

.wish__icon {
    padding-left: 10px;
    padding-right: 20rpx;
}

.wish__bd {
    flex: 1;
}

.wish__ft {
    text-align: right;
    color: grey;
    padding-right: 26rpx;
    position: relative
}

.wish__ft:after {
    content: " ";
    display: inline-block;
    height: 12rpx;
    width: 12rpx;
    border-width: 4rpx 4rpx 0 0;
    border-color: #fff;
    border-style: solid;
    transform: matrix(.71, .71, -.71, .71, 0, 0);
    position: relative;
    top: -4rpx;
    position: absolute;
    top: 50%;
    margin-top: -8rpx;
    right: 4rpx
}

.payment {
    display: flex;
}

.payment-item {
    position: relative;
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    padding: 10rpx 0;
}

.payment-item:after {
    content: " ";
    position: absolute;
    right: 0;
    top: 0;
    width: 1px;
    bottom: 0;
    border-left: 1px solid #D5D5D6;
    color: #D5D5D6;
    transform-origin: 0 0;
    transform: scaleX(0.5);
}

.payment-item:last-child:after {
    display: none;
}

.payment-label {
    font-size: 24rpx;
    color: #999;
}

.payment-label--del {
    text-decoration: line-through;
}

.payment-money {
    font-size: 36rpx;
    color: #ff0000;
}

.guesslike-title {
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 30rpx;
    color: #333;
    background-color: #f8f8f8;
    height: 80rpx;
    padding: 10rpx;
    text-align: center;
    box-sizing: border-box;
}

.guesslike-content {
    background-color: #fff;
    padding: 30rpx 0;
}

.guesslike-srcoll {
    display: block;
    overflow-x: auto;
    white-space: nowrap
}

.car {
    position: relative;
    display: inline-block;
    padding: 10rpx;
    width: 340rpx;
    background-color: #fff;
    box-sizing: border-box;
    padding: 0 20rpx;
}

.car:after {
    content: " ";
    position: absolute;
    right: 0;
    top: 0;
    width: 1px;
    bottom: 0;
    border-left: 1px solid #D5D5D6;
    color: #D5D5D6;
    transform-origin: 0 0;
    transform: scaleX(0.5);
}

.car:last-child:after {
    display: none;
}

.car:last-child {
    margin-right: 0;
}

.car__scroll {
    width: auto;
    overflow-x: auto;
    white-space: nowrap;
}

.car__image {
    display: block;
    width: 100%;
    height: 160rpx;
    background-color: #fff;
}

.car__title {
    color: rgba(16, 16, 16, 1);
    font-size: 28rpx;
    text-align: left;
    font-family: PingFangSC-regular;
    margin-top: 6rpx;
}

.car__title--payment {
    font-size: 24rpx;
    color: rgba(229, 28, 35, 1);
}

.car__title--monthly {
    font-size: 24rpx;
    color: rgba(193, 195, 200, 1);
}

.bottom {
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 18rpx 20rpx;
    height: 100rpx;
    background-color: #fff;
    box-sizing: border-box;
}

.bottom:after {
    content: " ";
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    height: 1px;
    border-top: 1px solid #D5D5D6;
    color: #D5D5D6;
    transform-origin: 0 0;
    transform: scaleY(0.5);
}

.bottom-icon {
    flex: 1;
    font-size: 52rpx;
    color: #999;
}

.bottom-btn {
    width: 300rpx;
    height: 72rpx;
    font-size: 26rpx;
    line-height: 72rpx;
    text-align: center;
    border-radius: 36rpx;
    color: #fff;
    background-color: #3f51b5;
}